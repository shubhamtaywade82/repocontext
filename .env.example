# Repo context
# REPO_CONTEXT_PATH=                    # Repo root for context (default: project root)
# CONTEXT_FILES=README.md,Gemfile        # Comma-separated files loaded first
# CONTEXT_MAX_CHARS=35000                # Max context size

# Server
# PORT=4567                              # HTTP port

# Ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.1:8b-instruct-q4_K_M
# OLLAMA_CODE_MODEL=qwen2.5-coder:7b
# OLLAMA_EMBED_MODEL=nomic-embed-text:v1.5  # requires Ollama 0.1.26+
# OLLAMA_TEMPERATURE=0.5
# OLLAMA_TIMEOUT=60

# Discovery (LLM picks extra files)
# DISCOVERY_AGENT_ENABLED=true
# CANDIDATE_MAX_FILE_SIZE=500000     # Skip files larger than this (bytes); 0 = no limit
# CANDIDATE_EXCLUDE_PATTERNS=       # Comma-separated fnmatch patterns (e.g. vendor/*,*.min.js)

# Embeddings (RAG)
# EMBED_CONTEXT_ENABLED=true
# EMBED_TOP_K=5
# EMBED_CHUNK_SIZE=2000
# EMBED_CHUNK_OVERLAP=200
# EMBED_MAX_CHUNKS=60
# EMBED_MIN_QUESTION_LENGTH=3
# EMBED_PARALLEL_CHUNKS=1            # Parallel embed requests per file (1 = sequential)

# Code review
# REVIEW_MAX_ITERATIONS=15
# REVIEW_MAX_PATHS=20
# REVIEW_MAX_FILE_SIZE=102400       # Max file size for review (bytes); default 100KB
# REVIEW_FOCUS=Clean Ruby: naming, single responsibility, short methods, guard clauses

# Cache (embedding and context; in-memory if REDIS_URL unset)
# CACHE_ENABLED=true
# CACHE_TTL_SECONDS=3600
# REDIS_URL=                          # Optional Redis URL for cache backend

# Logging
# LOG_LEVEL=info
# LOG_PREVIEW_LENGTH=80              # Max chars for question in logs
# LOG_FOCUS_MAX_CHARS=60            # Max chars for review focus in logs
